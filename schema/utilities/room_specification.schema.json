{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://datascene.ca/schema/utilities/RoomSpecification",
  "title": "Configuration de salle (RoomSpecification)",
  "description": "Précisions sur un configuration possible de la salle.",
  "required": [
    "type",
    "layout"
  ],
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "type": {
      "const": "RoomConfiguration"
    },
    "layout": {
      "$ref": "term.schema.json"
    },
    "capacity": {
      "description": "Capacité, en nombre de spectacteurs.",
      "type": "integer"
    }
  }
}