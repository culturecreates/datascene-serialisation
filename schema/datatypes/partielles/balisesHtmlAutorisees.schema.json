{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://datascene.ca/datatypes/partielles/balisesHtmlAutorisees.schema.json",
  "title": "Les balises HTML autorisées",
  "description": "Les balises HTML autorisées b, i, u, sup et sub.",
  "examples": [
    "<b>Texte en gras</b>",
    "<i>Texte en italique</i>",
    "<u>Texte souligné</u>",
    "<sup>Texte en exposant</sup>",
    "<sub>Texte en indice</sub>"
  ],
  "type": "string",
  "pattern": "^(?!.*<[^bius][^>]*>)(?!.*</?(?!b|i|u|sup|sub)[^>]*>).*$"
}