{
  "json.validate.enable": true,
  "json.schemas": [
    {
      "fileMatch": ["data/lieu/*.json"],
      "url": "./schema/place.schema.json"
    },
    {
      "fileMatch": ["data/salle/*.json"],
      "url": "./schema/room.schema.json"
    },
    {
      "fileMatch": ["data/adresse/*.json"],
      "url": "./schema/utilitaires/postal_address.schema.json"
    },
    {
      "fileMatch": ["data/offre/*.json"],
      "url": "./schema/offre.schema.json"
    },
    {
      "fileMatch": ["data/spectacle/*.json"],
      "url": "./schema/spectacle.schema.json"
    },
    {
      "fileMatch": ["data/représentation/*.json"],
      "url": "./schema/représentation.schema.json"
    }
  ]
}